{
  "name": "book-store",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "test": "yarn lint-staged",
    "pre-commit": "yarn lint-staged"
  },
  "dependencies": {
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "eslint": "8.28.0",
    "eslint-config-next": "13.0.5",
    "lint-staged": "^13.0.3",
    "next": "13.0.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.9.3"
  },
  "devDependencies": {
    "husky": "7.0.0"
  },
  "lint-staged": {
    "**/*.{css,scss}": [
      "stylelint --ignore-path .gitignore '**/*.{css,scss}' --fix",
      "prettier --ignore-path .gitignore '**/*.{css,scss}' --write"
    ],
    "**/*.{ts,tsx}": [
      "eslint --ignore-path .gitignore '**/*.{ts,tsx}' --fix",
      "prettier --ignore-path .gitignore '**/*.{ts,tsx}' --write"
    ]
  }
}
